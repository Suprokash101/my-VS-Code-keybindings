// Installed extensions:
// Atom One Dark Syntax Theme (andischerer.theme-atom-one-dark)
// Beautify (HookyQR.beautify)
// ESLint (dbaeumer.vscode-eslint)
// highlight-matching-tag (vincaslt.highlight-matching-tag)
// Nord (arcticicestudio.nord-visual-studio-code)
// PHP IntelliSense (felixfbecker.php-intellisense)
// Sublime Text Keymap and Settings Importer (ms-vscode.sublime-keybindings)

----------------------------------------------------------------------------

// Place your key bindings in this file to overwrite the defaults
[
    { "key": "alt+v",                  "command": "cursorDown",
                                     "when": "editorTextFocus" },
    { "key": "alt+e",                    "command": "cursorUp",
                                     "when": "editorTextFocus" },
    { "key": "alt+s",                  "command": "cursorLeft",
                                     "when": "editorTextFocus" },
    { "key": "alt+d",                 "command": "cursorRight",
                                     "when": "editorTextFocus" },
    { "key": "alt+q",             "command": "cursorWordStartLeft",
                                     "when": "editorTextFocus" },
    { "key": "alt+r",            "command": "cursorWordEndRight",
                                     "when": "editorTextFocus" },
    { "key": "alt+f",             "command": "cursorEnd",
                                     "when": "editorTextFocus" },
    { "key": "alt+a",                  "command": "cursorHome",
                                       "when": "editorTextFocus" },
    { "key": "alt+w",                "command": "cursorPageUp",
                                         "when": "editorTextFocus" },
    { "key": "alt+b",              "command": "cursorPageDown",
                                         "when": "editorTextFocus" },
    { "key": "alt+u",             "command": "deleteLeft",
                                         "when": "editorTextFocus && !editorReadonly" },
    { "key": "alt+i",                "command": "deleteRight",
                                         "when": "editorTextFocus && !editorReadonly" },
    { "key": "alt+y",        "command": "deleteWordLeft",
                                         "when": "editorTextFocus && !editorReadonly" },
    { "key": "alt+o",           "command": "deleteWordRight",
                                     "when": "editorTextFocus && !editorReadonly" },
    { "key": "alt+h",            "command": "cursorLeftSelect",
                                     "when": "editorTextFocus" },
    { "key": "alt+l",           "command": "cursorRightSelect",
                                     "when": "editorTextFocus" },
    { "key": "alt+k",      "command": "cursorWordEndRightSelect",
                                     "when": "editorTextFocus" },
    { "key": "alt+j",       "command": "cursorWordStartLeftSelect",
                                     "when": "editorTextFocus" },
    { "key": "alt+m",       "command": "cursorDownSelect",
                                     "when": "editorTextFocus" },
    { "key": "alt+n",         "command": "cursorUpSelect",
                                    "when": "editorTextFocus"
                                },
                                {
                                    "key": "ctrl+shift+a",
                                    "command": "editor.action.smartSelect.grow",
                                    "when": "editorTextFocus"
                                },
                                {
                                    "key": "shift+alt+right",
                                    "command": "-editor.action.smartSelect.grow",
                                    "when": "editorTextFocus"
                                },
                                {
                                    "key": "ctrl+up",
                                    "command": "editor.emmet.action.incrementNumberByOneTenth"
                                },
                                {
                                    "key": "ctrl+down",
                                    "command": "editor.emmet.action.decrementNumberByOneTenth"
                                }
                            ]
